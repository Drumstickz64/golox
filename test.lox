print "--fib test--";
fun fib(n) {
  if (n <= 1) {
    return n;
  }

  return fib(n - 2) + fib(n - 1);
}

var start = clock();
for (var i = 0; i < 20; i = i + 1) {
  print fib(i);
}
var end = clock();
print "fib took:";
print end - start;

